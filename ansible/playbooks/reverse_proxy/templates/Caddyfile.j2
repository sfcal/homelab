{
        admin 0.0.0.0:2019
}

*.{{ domain_name }} {
        tls {
                dns cloudflare {env.CF_API_TOKEN}
                propagation_delay 2m
                resolvers 1.1.1.1
        }

        @radarr host radarr.5am.video
        handle @radarr {
                reverse_proxy 10.2.0.5:7878
        }

        @sonarr host sonarr.5am.video
        handle @sonarr {
                reverse_proxy 10.2.0.5:8989
        }

        @trueNAS host truenas.5am.video
        handle @trueNAS {
                reverse_proxy 192.168.6.2:80
        }

        @portainer host caddy-portainer.5am.video
        handle @portainer {
                reverse_proxy https://portainer:9443 {
                    transport http {
                            tls
                            tls_insecure_skip_verify
                    }
                }
        }
}
}
