---
services:
  convertx:
    image: {{ convertx_image }}
    container_name: convertx
    restart: unless-stopped
    mem_limit: 2g
    mem_reservation: 512m
    ports:
      - "{{ convertx_port }}:3000"
    environment:
      - JWT_SECRET={{ convertx_jwt_secret }}
      - ALLOW_UNAUTHENTICATED=true
      - HTTP_ALLOWED=true
    volumes:
      - {{ deploy_path }}/convertx/data:/app/data
